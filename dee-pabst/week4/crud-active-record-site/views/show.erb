<h2><%= @hit.title %></h2>
<img src="<%= @hit.thumbnail %>" alt="<%= @hit.title %>">
<table>
  <tr>
    <td>Album</td>
    <td><%= @hit.album %></td>
  </tr>
  <tr>
    <td>Genre</td>
    <td><%= @hit.genre %></td>
  </tr>
  <tr>
    <td>Weeks #1</td>
    <td><%= @hit.weeks_at_number_one %></td>
  </tr>
  <tr>
    <td>Released</td>
    <td><%= @hit.year_released %></td>
  </tr>
  <tr>
    <td>Streams</td>
    <td><%= @hit.spotify_streams %></td>
  </tr>
    <tr>
    <td>Artist</td>
    <td><%= Artist.find(@hit.artist_id).name %></td>
  </tr>
</table>
<a href="/hits/<%= @hit.id %>/edit">Edit</a>
<a href="/hits/<%= @hit.id %>/delete">Delete</a>